<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/purple_0"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

  <ViewFlipper
    android:id="@+id/trash_$_viewflipper"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <chan.android.app.pocketnote.util.view.RoundedRectListView
      android:id="@+id/trash_$_listview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:divider="#00000000"
      android:layout_marginTop="5dp"
      android:layout_marginLeft="5dp"
      android:layout_marginBottom="5dp"
      android:layout_marginRight="5dp"
      android:dividerHeight="10px"
      />

    <LinearLayout
      android:orientation="vertical"
      android:layout_gravity="center"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/empty_trash"
        />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empty Trash"
        android:layout_gravity="center_horizontal"
        android:textSize="24sp"
        android:textColor="@color/purple_14"
        android:textStyle="bold"
        />
    </LinearLayout>
  </ViewFlipper>

