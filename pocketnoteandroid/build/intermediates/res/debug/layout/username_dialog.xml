<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:background="@drawable/rectangle_transparent"
  android:layout_height="match_parent">

  <EditText
    android:id="@+id/username_dialog_$_edittext_username"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_rounded_tops_bottoms"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:textSize="14sp"
    android:singleLine="true"
    android:layout_gravity="center_horizontal"
    android:textColor="@color/aluminum6"
    />

  <LinearLayout
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
      android:id="@+id/username_dialog_$_button_reset"
      android:layout_marginTop="30dp"
      android:layout_marginBottom="20dp"
      android:layout_width="80dp"
      android:layout_height="35dp"
      android:text="Reset"
      android:textSize="12sp"
      android:background="@drawable/purple_button"
      />

    <Button
      android:id="@+id/username_dialog_$_button_save"
      android:layout_marginTop="30dp"
      android:layout_marginBottom="20dp"
      android:layout_width="80dp"
      android:layout_height="35dp"
      android:text="Save"
      android:textSize="12sp"
      android:background="@drawable/purple_button"
      />
  </LinearLayout>
</LinearLayout><!-- From: file:/Users/chan/Documents/workspace-contract/pocket-note-android/pocketnoteandroid/src/main/res/layout/username_dialog.xml -->